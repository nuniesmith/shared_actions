{
    "groups": {
        "group:automation": ["jordan@7gram.xyz"]
    },

    "tagOwners": {
        "tag:ci": ["autogroup:admin", "group:automation"],
        "tag:server": ["autogroup:admin", "group:automation"],
        "tag:nginx": ["autogroup:admin", "group:automation"],
        "tag:ats": ["autogroup:admin", "group:automation"],
        "tag:fks": ["autogroup:admin", "group:automation"]
    },

    "acls": [
        {
            "action": "accept",
            "src": ["autogroup:admin"],
            "dst": ["*:*"]
        },
        {
            "action": "accept",
            "src": ["tag:ci"],
            "dst": ["tag:server:*", "tag:nginx:*", "tag:ats:*", "tag:fks:*"]
        },
        {
            "action": "accept",
            "src": ["tag:server", "tag:nginx", "tag:ats", "tag:fks"],
            "dst": ["tag:server:*", "tag:nginx:*", "tag:ats:*", "tag:fks:*"]
        },
        {
            "action": "accept",
            "src": ["autogroup:member"],
            "dst": ["autogroup:self:*"]
        },
        {
            "action": "accept",
            "src": ["group:automation"],
            "dst": ["tag:server:*", "tag:nginx:*", "tag:ats:*", "tag:fks:*"]
        }
    ],

    "ssh": [
        {
            "action": "accept",
            "src": ["autogroup:admin"],
            "dst": ["tag:server", "tag:nginx", "tag:ats", "tag:fks"],
            "users": ["root", "autogroup:nonroot"]
        },
        {
            "action": "accept", 
            "src": ["tag:ci"],
            "dst": ["tag:server", "tag:nginx", "tag:ats", "tag:fks"],
            "users": ["root", "ubuntu", "jordan", "actions"]
        },
        {
            "action": "accept",
            "src": ["group:automation"],
            "dst": ["tag:server", "tag:nginx", "tag:ats", "tag:fks"],
            "users": ["root", "ubuntu", "jordan", "actions"]
        },
        {
            "action": "check",
            "src": ["autogroup:member"],
            "dst": ["autogroup:self"],
            "users": ["autogroup:nonroot", "root"]
        }
    ],

    "tests": [
        {
            "src": "group:automation",
            "accept": ["tag:server:22", "tag:nginx:443", "tag:ats:80", "tag:fks:8000"]
        },
        {
            "src": "tag:ci", 
            "accept": ["tag:server:22", "tag:nginx:22", "tag:ats:22", "tag:fks:22"]
        }
    ]
}